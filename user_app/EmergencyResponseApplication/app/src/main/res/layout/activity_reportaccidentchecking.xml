<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".reportaccidentchecking"
android:background="@color/finalBackground"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <RelativeLayout
            android:id="@+id/reportcrash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/map"
            android:layout_marginTop="0dp"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:id="@+id/container"

                >
                <ImageView
                    android:id="@+id/reportImage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"


                     />
                <TextView
                    android:id="@+id/reportTitle"
                    android:layout_width="253dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text=""
                    android:fontFamily="@font/roboto_condensed_bold"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:textColor="@color/themecolor" />


                <TextView
                    android:id="@+id/reportBody"
                    android:layout_width="253dp"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:text=""
                    android:textSize="12sp"
                    android:fontFamily="@font/roboto_condensed_bold"
                    android:textAlignment="center"
                    android:textColor="@color/finalColor" />

                <TextView
                    android:id="@+id/searchingTxt"
                    android:layout_width="253dp"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:layout_marginTop="40dp"
                    android:text=""
                    android:fontFamily="@font/roboto_condensed_bold"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:textColor="@color/finalColor" />


                <com.agrawalsuneet.dotsloader.loaders.LinearDotsLoader
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:loader_animDur="300"
                    app:loader_noOfDots="8"
                    app:loader_circleRadius="6dp"
                    app:loader_defaultColor="#c7cbd1"
                    app:loader_selectedColor="@color/themecolor"
                    app:loader_dotsDist="3dp"
                    app:loader_expandOnSelect="false"
                    app:loader_isSingleDir="false"
                    app:loader_selectedRadius="10dp"
                    app:loader_showRunningShadow="true"
                    app:loader_firstShadowColor="@color/themecolor"
                    app:loader_secondShadowColor="@color/themecolor"/>




            </LinearLayout>



        </RelativeLayout>


    </RelativeLayout>