<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/finalBackground"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Your Allergy"
        android:fontFamily="@font/roboto_condensed_bold"
        android:textColor="@color/themecolor"
        android:textSize="16sp"
        />

    <androidx.appcompat.widget.AppCompatCheckBox android:id="@+id/checkbox_drug"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Drug"
        android:fontFamily="@font/roboto_condensed_bold"
        android:textColor="@color/finalColor"
        android:buttonTint="@color/finalColor"
        android:textColorHint="@color/finalColor"
        />
    <androidx.appcompat.widget.AppCompatCheckBox android:id="@+id/checkbox_food"

        android:layout_width="match_parent"
        android:textColor="@color/finalColor"
        android:layout_height="wrap_content"
        android:buttonTint="@color/finalColor"
        android:textColorHint="@color/finalColor"
        android:text="Food"
        android:fontFamily="@font/roboto_condensed_bold"
        />
    <androidx.appcompat.widget.AppCompatCheckBox android:id="@+id/checkbox_skin"
        android:layout_width="match_parent"
        android:textColor="@color/finalColor"
        android:layout_height="wrap_content"
        android:buttonTint="@color/finalColor"
        android:textColorHint="@color/finalColor"
        android:fontFamily="@font/roboto_condensed_bold"
        android:text="Skin "
        />
    <androidx.appcompat.widget.AppCompatCheckBox android:id="@+id/checkbox_dust"
        android:layout_width="match_parent"
        android:textColor="@color/finalColor"
        android:layout_height="wrap_content"
        android:buttonTint="@color/finalColor"
        android:textColorHint="@color/finalColor"
        android:text="Dust"
        android:fontFamily="@font/roboto_condensed_bold"
        />

</LinearLayout>
