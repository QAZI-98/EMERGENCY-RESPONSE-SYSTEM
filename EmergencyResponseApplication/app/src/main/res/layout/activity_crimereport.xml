<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:android="http://schemas.android.com/apk/res/android">

<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    tools:context=".crimereport" />



    <RelativeLayout
        android:id="@+id/reportcrash1"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/map"
        android:layout_marginTop="30dp"



        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/txt"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Add Crime Report"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black" />
        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/reportcrash2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/reportcrash1"
        android:layout_marginTop="0dp"

        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/txt2"
            android:layout_marginLeft="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="just click the following reports"
                android:textAlignment="center"

                />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/reportcrash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reportcrash1"
        android:layout_marginTop="30dp"
        android:onClick="reportconfirmationbtn"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"


            >
            <ImageView
                android:id="@+id/way"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/police" />

            <TextView
                android:layout_width="253dp"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:onClick="reportCrash"
                android:text="Report Crime"
                android:textColor="@color/black" />


        </LinearLayout>


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/reportcrash3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reportcrash2"
        android:layout_marginTop="35dp"
        android:onClick="reportconfirmationbtn"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"

            >
            <ImageView
                android:id="@+id/way2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/policecar" />

            <TextView
                android:layout_width="253dp"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="Police Help"
                android:textColor="@color/black" />
        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>