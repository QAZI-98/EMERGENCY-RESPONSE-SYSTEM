<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"

    tools:context=".howitworks">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
           <ImageView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:src="@drawable/logof"
               />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Introduction"
                android:textStyle="bold"
                android:textSize="22dp"
                android:textColor="@color/black"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/introTXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The ERS has ability to make communities safer and increase collaboration through data sharing, and make reporting of emergency easier."
                android:textSize="16dp"
                android:layout_gravity="left"
                android:textColor="#808080"
                android:padding="20dp"
                  />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Speech"
                android:onClick="txt"
                />
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="How it Works"
                    android:textSize="22dp"
                    android:textStyle="bold"
                android:textColor="@color/black"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/step1TXT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="With ERS you can report emergency related to Accident, Crime, and Fire."
                    android:textSize="16dp"
                    android:textColor="#808080"
                    android:padding="20dp"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reporting of Accident"
                    android:textSize="16dp"
                    android:id="@+id/titleStep1"
                    android:textColor="@color/black"
                    android:padding="20dp"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/infoStep1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Step 01: Press the Emergency Button on Dashboard"
                    android:textSize="16dp"
                    android:textColor="#808080"
                    android:padding="20dp"
                    android:textStyle="bold"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Speech"
                    android:onClick="txtStep"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:padding="20dp"
                    android:src="@drawable/dashboard"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Step 02: Allow location permission"
                    android:textSize="16dp"
                    android:textColor="#808080"
                    android:padding="20dp"
                    android:textStyle="bold"
                    android:id="@+id/step2Title"
                    />
            </LinearLayout>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The app needs your permission to locate your current location"
                android:textSize="16dp"
                android:textColor="#808080"
                android:padding="20dp"
                android:id="@+id/step2Body"
                />
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Speech"
                    android:onClick="txtStep2"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:padding="20dp"
                    android:src="@drawable/allow"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Step 03: Select the accident option"
                    android:textSize="16dp"
                    android:textColor="#808080"
                    android:padding="20dp"
                    android:textStyle="bold"
                   android:id="@+id/step3Title"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The upper arrow show your current location, the lower arrow points options you can choose"
                    android:textSize="16dp"
                    android:textColor="#808080"
                    android:padding="20dp"
                    android:id="@+id/step3Body"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Speech"
                    android:onClick="txtStep3"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:padding="20dp"
                    android:src="@drawable/accident"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Step 04: Wait, App search for ambulance near you"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="#808080"
                    android:padding="20dp"
                    android:id="@+id/step4Title"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The app search for an ambulance near you, it searches every kilometer starting from you"
                    android:textSize="16dp"
                    android:textColor="#808080"
                    android:padding="20dp"
                    android:id="@+id/step4Body"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Speech"
                    android:onClick="txtStep4"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:padding="20dp"
                    android:src="@drawable/loading"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Step 05: Select Confirm"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="#808080"
                    android:padding="20dp"
                    android:id="@+id/step5Title"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Once you confirm, the ambulance will get your location and will get to you."
                    android:textSize="16dp"
                    android:padding="20dp"
                    android:textColor="#808080"
                    android:id="@+id/step5Body"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Speech"
                    android:onClick="txtStep5"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:padding="20dp"
                    android:src="@drawable/found"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Step 06: Select Drop option"
                    android:textSize="16dp"
                    android:id="@+id/step6Title"
                    android:padding="20dp"
                    android:textStyle="bold"
                    android:textColor="#808080"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Once driver picked and drop you select drop button."
                    android:textSize="16dp"
                    android:padding="20dp"
                    android:id="@+id/step6Body"
                    android:textColor="#808080"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Speech"
                    android:onClick="txtStep6"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:padding="20dp"
                    android:src="@drawable/arrived"
                    />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</ScrollView>